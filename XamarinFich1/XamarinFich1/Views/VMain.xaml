<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFich1.Views.VMain"
             Title="{Binding Title}">
  <ScrollView>
        <StackLayout Padding="10">
            <Button x:Name="btTeoria" Text="Teoría C#" Command="{Binding NavigateCommand}" CommandParameter="{Binding Path=Text, Source={Reference Name=btTeoria}}"/>
            <Button x:Name="btEjemplos" Text="Ejemplos" Command="{Binding NavigateCommand}" CommandParameter="{Binding Path=Text, Source={Reference Name=btEjemplos}}"/>
            <Button x:Name="btEjercicios" Text="Ejercicios" Command="{Binding NavigateCommand}" CommandParameter="{Binding Path=Text, Source={Reference Name=btEjercicios}}"/>
            <Button x:Name="btWPF" Text="WPF" Command="{Binding NavigateCommand}" CommandParameter="{Binding Path=Text, Source={Reference Name=btWPF}}"/>
            <Button x:Name="btXamarin" Text="Xamarin" Command="{Binding NavigateCommand}" CommandParameter="{Binding Path=Text, Source={Reference Name=btXamarin}}"/>
    </StackLayout>
  </ScrollView>
</ContentPage>